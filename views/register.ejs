<!DOCTYPE html>
<html>
<head>
    <% include partials/head.ejs %>
    <style>
        li:hover {
            background-color: #e7e7e7;
        }
    </style>
</head>

<body style="width: 100%; height: 100%">

    <% include partials/navbar.ejs %>

    <div class="container" style="text-align: center">
        <div style="padding: 3% 5% 3%; margin-top: 10%; box-shadow: 0px 0px 30px #888; display: inline-block; background-color: white">
            <div style="margin: 0 auto">
                <form action="/register" onsubmit="return validateForm()" method="POST" style="text-align: center" id="registerForm">
                    <h2>Register</h2>
                    <div style="margin-top: 15%">
                        <label for="username">User Name:</label>
                        <input name="username" id="username">
                    </div>
                    <div style="margin-top: 5%">
                        <label for="password1">Password:</label>
                        <input name="password1" id="password1">
                    </div>
                    <div style="margin-top: 5%">
                        <label for="password2">Confirm Password:</label>
                        <input name="password2" id="password2">
                    </div>
                    <div style="clear: both; margin: 15px 0px 0px">
                        <button>Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        function validateForm() {
            var form = document.getElementById('registerForm');
            if (form['username'].value == "" || form['password1'].value == "" || form['password2'].value == "") {
                alert("All fields must be filled out")
                return false;
            } 
            if (form['password1'].value != form['password2'].value) {
                alert("Passwords do not match")
                return false;
            }
        }
    
    </script>
</body>
</html>










